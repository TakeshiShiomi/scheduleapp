<h3>スケジュール編集</h3>
 
<%= form_with model: @schedule do |f| %>
<table>
<tr>
  <th><%= f.label :title ,"タイトル" %></th>
  <td><%= f.text_field :title %></td>
</tr>

<tr>
  <th><%= f.label :start ,"開始日" %></th>
  <td><%= f.date_field :start %></td>
</tr>

<tr>
  <th><%= f.label :finish ,"終了日" %></th>
  <td><%= f.date_field :finish %></td>
</tr>

<tr>
  <th><%= f.label :allday ,"終日" %></th>
  <td><%= f.check_box :allday %>
  <p>終日の場合はチェックを入れます</p>
  </td>
</tr>

<tr>
  <th><%= f.label :introduction ,"スケジュールメモ" %></th>
  <td><%= f.text_area :introduction %></td>
</tr>
</table>

<div>
  <ul>
    <li><%= f.submit "編集を完了する" %></li>
    <li><%= link_to "スケジュール情報一覧に戻る", :schedules %></li>
  </ul>
</div>
<% end %>